{# src/SD/CoreBundle/Resources/views/Timetable/edit.html.twig #}

{% extends "SDCoreBundle::layout.html.twig" %}

{% block body %}

<div class="panel panel-default">

  <div class="panel-body">
<p><img src="{{ asset('bundles/sdcore/images/time-32.png') }}">&nbsp;<strong>{{ timetable.name }}</strong></p>

{% if listTimetableLines|length > 0 %}
<table class="table table-striped">
    <thead>
    <tr>
    <th>{{ 'from'|trans }}</th>
    <th>{{ 'to'|trans }}</th>
{% if timetable.type == 'T' %}
    <th>{{ 'modify'|trans }}</th>
    <th>{{ 'delete'|trans }}</th>
{% endif %}
    </tr>
    </thead>
    <tbody>
{% for timetableLine in listTimetableLines %}
<tr>
    <td>{{ timetableLine.beginningTime|date("H:i") }}</td>
    <td>{{ timetableLine.endTime|date("H:i") }}</td>
{% if timetable.type == 'T' %}
    <td><a href="{{ path('sd_core_timetable_modifyline', { 'timetableID': timetable.ID, 'timetableLineID': timetableLine.ID }) }}"><i class="glyphicon glyphicon-pencil"></i></a></td>
    <td><a href="{{ path('sd_core_timetable_deleteline', { 'timetableID': timetable.ID, 'timetableLineID': timetableLine.ID }) }}"><i class="glyphicon glyphicon-trash"></i></a></td>
{% endif %}
</tr>
{% endfor %}
    </tbody>
</table>
{% endif %}
  </div>

  <div class="panel-footer">

 <div class="btn-group">
<a href="{{ path('sd_core_timetable_list', { 'pageNumber': 1 }) }}" class="btn btn-default"><i class="glyphicon glyphicon-chevron-left"></i> {{ 'timetable.back.to.list'|trans }}</a>

{% if timetable.type == 'D' %}
    <button type="button" class="btn btn-info btn-primary" data-toggle="modal" data-target="#updateModal1"><span class="glyphicon glyphicon-pencil"></span> <del>{{ 'modify'|trans }}</del></button>
{% elseif timetable.type == 'HD' %}
    <button type="button" class="btn btn-info btn-primary" data-toggle="modal" data-target="#updateModal2"><span class="glyphicon glyphicon-pencil"></span> <del>{{ 'modify'|trans }}</del></button>
{% else %}
	<a href="{{ path('sd_core_timetable_modify', { 'timetableID': timetable.ID }) }}" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i> {{ 'modify'|trans }}</a>
{% endif %}

{% if timetable.type == 'D' %}
    <button type="button" class="btn btn-info btn-danger" data-toggle="modal" data-target="#deleteModal1"><span class="glyphicon glyphicon-trash"></span> <del>{{ 'delete'|trans }}</del></button>
{% elseif timetable.type == 'HD' %}
    <button type="button" class="btn btn-info btn-danger" data-toggle="modal" data-target="#deleteModal2"><span class="glyphicon glyphicon-trash"></span> <del>{{ 'delete'|trans }}</del></button>
{% else %}
	<a href="{{ path('sd_core_timetable_delete', { 'timetableID': timetable.ID }) }}" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> {{ 'delete'|trans }}</a>
{% endif %}

{% if timetable.type == 'D' %}
    <button type="button" class="btn btn-info btn-primary" data-toggle="modal" data-target="#updateModal1"><span class="glyphicon glyphicon-plus"></span> <del>{{ 'timetableLine.create'|trans }}</del></button>
{% elseif timetable.type == 'HD' %}
    <button type="button" class="btn btn-info btn-primary" data-toggle="modal" data-target="#updateModal2"><span class="glyphicon glyphicon-plus"></span> <del>{{ 'timetableLine.create'|trans }}</del></button>
{% else %}
	<a href="{{ path('sd_core_timetable_addline', { 'timetableID': timetable.ID }) }}" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> {{ ('timetableLine.create')|trans }}</a>
{% endif %}

</div>

  </div>
</div>

{% for flash_message in app.session.flashBag.get('notice') %}
<div class="alert alert-success">
<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    {{ flash_message|trans }}
</div>
{% endfor %}

<!-- Modal -->
<div id="updateModal1" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{ 'update.not.allowed'|trans }}</h4>
      </div>
      <div class="modal-body">
        <p>{{ 'timetable.update.not.allowed.1'|trans }}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'close'|trans }}</button>
      </div>
    </div>

  </div>
</div>

<div id="updateModal2" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{ 'update.not.allowed'|trans }}</h4>
      </div>
      <div class="modal-body">
        <p>{{ 'timetable.update.not.allowed.2'|trans }}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'close'|trans }}</button>
      </div>
    </div>

  </div>
</div>

<div id="deleteModal1" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{ 'delete.not.allowed'|trans }}</h4>
      </div>
      <div class="modal-body">
        <p>{{ 'timetable.delete.not.allowed.1'|trans }}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'close'|trans }}</button>
      </div>
    </div>

  </div>
</div>

<div id="deleteModal2" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">{{ 'delete.not.allowed'|trans }}</h4>
      </div>
      <div class="modal-body">
        <p>{{ 'timetable.delete.not.allowed.2'|trans }}</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'close'|trans }}</button>
      </div>
    </div>

  </div>
</div>


{% endblock %}
