{# src/SD/CoreBundle/Resources/views/Booking/delete.many.html.twig #}

{% extends "SDCoreBundle:Booking:create.or.update.html.twig" %}

{% block userFiles_list_link %}
<li class="list-group-item"><img src="{{ asset('bundles/sdcore/images/' ~ image) }}">&nbsp;{{ userFiles[0].getFirstAndLastName() }}</li>
{% endblock %}

{% block userFiles_table_link %}
{% endblock %}

{% block period_end_link %}
<li class="list-group-item"><img src="{{ asset('bundles/sdcore/images/time-32.png') }}">&nbsp;{{ dateLongue(endDate) }}&nbsp;&rarr;&nbsp;{{ timetableLine(endTimetableLine) }}</li>
{% endblock %}

{% block booking_buttons %}
	<a href="{{ path('sd_core_planning_many_timetable', { 'planificationID': planification.ID, 'planificationPeriodID': planificationPeriod.ID, 'date': date|date('Ymd') }) }}" class="btn btn-default"><i class="glyphicon glyphicon-chevron-left"></i> {{ 'cancel'|trans }}</a>
	<a href="{{ path('sd_core_booking_many_validate_delete', { 'bookingID': booking.ID, 'planificationID': planification.ID, 'planificationPeriodID': planificationPeriod.ID, 'resourceID': resource.ID, 'date': date|date('Ymd'), 'timetableLinesList': timetableLinesList, 'userFileIDList': userFileIDList }) }}" class="btn btn-danger"><i class="glyphicon glyphicon-ok"></i>&nbsp;{{ 'validate'|trans }}</a>
{% endblock %}
