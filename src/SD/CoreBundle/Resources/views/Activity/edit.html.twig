{# src/SD/CoreBundle/Resources/views/Activity/edit.html.twig #}

{% extends "SDCoreBundle::layout.html.twig" %}

{% block body %}

<div class="panel panel-default">

  <div class="panel-body">
<p><img src="{{ asset('bundles/sdcore/images/activity-32.png') }}">&nbsp;<strong>{{ activity.name }}</strong></p>
  </div>

  <div class="panel-footer">

  <div class="btn-group">
<a href="{{ path('sd_core_activity_list', { 'pageNumber': 1 }) }}" class="btn btn-default"><i class="glyphicon glyphicon-chevron-left"></i> {{ 'activity.back.to.list'|trans }}</a>
<a href="{{ path('sd_core_activity_modify', { 'activityID': activity.ID }) }}" class="btn btn-primary"><i class="glyphicon glyphicon-pencil"></i> {{ 'modify'|trans }}</a>
<a href="{{ path('sd_core_activity_delete', { 'activityID': activity.ID }) }}" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i> {{ 'delete'|trans }}</a>
</div>

  </div>
</div>

{% for flash_message in app.session.flashBag.get('notice') %}
<div class="alert alert-success">
<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
    {{ flash_message|trans }}
</div>
{% endfor %}

{% endblock %}
