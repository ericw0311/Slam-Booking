{% block planning %}

<div class="well well-sm container" style="color:blue; text-align: center">
<div class="row">
<div class="col-sm-2">
{{ form_widget(form.date) }}
<button type="submit" class="btn btn-success">{{ 'validate'|trans }}</button>
<button type="submit" class="glyphicon glyphicon-chevron-left"></button>
</div>
<div class="col-sm-10">
<a href="{{ path('sd_core_planning_one_timetable', { 'planificationID': planification.ID, 'planificationPeriodID': planificationPeriod.ID, 'date': previousDate|date('Ymd') }) }}" class="glyphicon glyphicon-chevron-left" title="{{ 'day.previous'|trans }}"></a>&nbsp;
{{ ('day.' ~ (date|date("D")|upper))|trans }}&nbsp;{{ date|date("j") }}&nbsp;{{ (('month.' ~ (date|date("M")|upper))|trans)|lower }}&nbsp;{{ date|date("Y") }}&nbsp;
