{# src/SD/CoreBundle/Resources/views/Default/flow.html.twig #}

{% if fileContext.allBookingsCount > 0 %}
  <a href="{{ path('sd_core_planning_booking_list', { 'pageNumber': 1 }) }}" class="list-group-item list-group-item-success"><img src="{{ asset('bundles/sdcore/images/booking-32.png') }}"> {{ 'booking.plural'|trans }} <span class="badge">{{ fileContext.allBookingsCount }}</span></a>
{% else %}

<ul class="list-group">
  <li class="list-group-item"><img src="{{ asset('bundles/sdcore/images/booking-32.png') }}"> {{ 'booking.plural'|trans }} <span class="badge">{{ fileContext.allBookingsCount }}</span></li>
</ul> 

{% endif %}
