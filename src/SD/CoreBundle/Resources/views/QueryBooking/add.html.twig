{# src/SD/CoreBundle/Resources/views/QueryBooking/add.html.twig #}

{% extends "SDCoreBundle::layout.html.twig" %}

{% block body %}
{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

<div class="panel panel-default">

<div class="panel-body">
    {{ form_errors(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.periodType) }}
    {{ form_row(form.beginningDate) }}
    {{ form_row(form.endDate) }}
    {{ form_rest(form) }}
</div>

<div class="panel-footer">
<div class="btn-group">
<a href="{{ path('sd_core_queryBooking_list', { 'pageNumber': 1 }) }}" class="btn btn-default"><i class="glyphicon glyphicon-chevron-left"></i> {{ 'cancel'|trans }}</a>
<button type="submit" class="btn btn-success"><i class="glyphicon glyphicon-ok"></i> {{ 'validate'|trans }}</button>
</div>
</div>

</div>

{{ form_end(form) }}

<script>
	var beginningDate = document.getElementById('sd_corebundle_queryBooking_beginningDate');
	beginningDate.disabled = true;
	var endDate = document.getElementById('sd_corebundle_queryBooking_endDate');
	endDate.disabled = true;

	document.getElementById("sd_corebundle_queryBooking_name").focus();
</script>

<script src="{{ asset('bundles/sdcore/js/queryBooking.js') }}"></script>

{% endblock %}
