{# src/SD/CoreBundle/Resources/views/UserFile/resource.no.html.twig #}

{% extends "SDCoreBundle:UserFile:resource.html.twig" %}

{% block link_yes_no %}

{% if internal > 0 %}
<a href="{{ path('sd_core_userFile_resource_internal', { 'userFileID': userFile.ID, 'resourceClassificationCode': resourceClassificationCode, 'yes': 0 }) }}" class="list-group-item active"><img src="{{ asset('bundles/sdcore/images/red-cross-32.png') }}">&nbsp;{{ 'no'|trans }}</a>
<a href="{{ path('sd_core_userFile_resource_internal', { 'userFileID': userFile.ID, 'resourceClassificationCode': resourceClassificationCode, 'yes': 1 }) }}" class="list-group-item"><img src="{{ asset('bundles/sdcore/images/green-check-32.png') }}">&nbsp;{{ 'yes'|trans }}</a>
{% else %}
<a href="{{ path('sd_core_userFile_resource_external', { 'userFileID': userFile.ID, 'resourceClassificationID': resourceClassificationID, 'yes': 0 }) }}" class="list-group-item active"><img src="{{ asset('bundles/sdcore/images/red-cross-32.png') }}">&nbsp;{{ 'no'|trans }}</a>
<a href="{{ path('sd_core_userFile_resource_external', { 'userFileID': userFile.ID, 'resourceClassificationID': resourceClassificationID, 'yes': 1 }) }}" class="list-group-item"><img src="{{ asset('bundles/sdcore/images/green-check-32.png') }}">&nbsp;{{ 'yes'|trans }}</a>
{% endif %}

{% endblock %}

{% block link_internal %}
<li class="list-group-item disabled"><img src="{{ asset('bundles/sdcore/images/' ~ resourceClassificationIcons[i_RCCode] ~ '-32.png') }}">&nbsp;{{ ('resourceClassification.singular.' ~ i_RCCode)|trans }}</li>
{% endblock %}

{% block link_external %}
<li class="list-group-item disabled"><img src="{{ asset('bundles/sdcore/images/' ~ resourceTypeIcons[resourceType] ~ '-32.png') }}">&nbsp;{{ i_RC.name }}</li>
{% endblock %}
