{# src/SD/CoreBundle/Resources/views/Booking/delete.one.html.twig #}

{% extends "SDCoreBundle:Booking:create.or.update.html.twig" %}

{% block form_start %}
{{ form_start(form) }}
{% endblock %}

{% block userFiles_list_link %}
<li class="list-group-item"><img src="{{ asset('bundles/sdcore/images/' ~ image) }}">&nbsp;{{ userFiles[0].getFirstAndLastName() }}</li>
{% endblock %}

{% block userFiles_table_link %}
{% endblock %}

{% block period_end_link %}
<li class="list-group-item"><img src="{{ asset('bundles/sdcore/images/time-32.png') }}">&nbsp;{{ dateLongue(endDate) }}&nbsp;&rarr;&nbsp;{{ timetableLine(endTimetableLine) }}</li>
{% endblock %}

{% block booking_buttons %}
	<a href="{{ path('sd_core_planning_one_timetable', { 'planificationID': planification.ID, 'planificationPeriodID': planificationPeriod.ID, 'date': date|date('Ymd') }) }}" class="btn btn-default"><i class="glyphicon glyphicon-chevron-left"></i> {{ 'cancel'|trans }}</a>
    <button type="submit" class="btn btn-danger"><i class="glyphicon glyphicon-ok"></i> {{ 'validate'|trans }}</button>
{% endblock %}

{% block ask_delete %}
<div><p class="text-danger">{{ 'booking.ask.delete'|trans }}</p></div>
{% endblock %}

{% block form_end %}
{{ form_end(form) }}
{% endblock %}
